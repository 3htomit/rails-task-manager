<h1><%= @task.title %></h1>

<p><strong>Status:
  <% if (@task.completed) %>
    <span class="text-success"><%= "done"%></span>
  <% else %>
    <span class="text-warning"><%= "ongoing"%></span>
  <% end %>
</strong></p>

<p><strong>Description:</strong> <%= @task.description %></p>

<br>
<hr>

<%= link_to "Back to tasks list", tasks_path, class: "btn btn-primary" %>
<%= link_to "Edit the task", edit_task_path, class: "btn btn-outline-primary" %>
<%= link_to "Delete the task", task_path(@task), method: :delete, data: { confirm: "Delete '#{@task.title}' ?" },
    class: "btn btn-outline-danger" %>
